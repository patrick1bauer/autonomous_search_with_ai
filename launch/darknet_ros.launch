<?xml version="1.0" encoding="utf-8"?>

<launch>
  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>
  <arg name="image1" default="robot1/camera/rgb/image_raw" />
  <arg name="image2" default="robot2/camera/rgb/image_raw" />

  <!-- Config and weights folder. -->
  <arg name="yolo_weights_path"          default="$(find darknet_ros)/yolo_network_config/weights"/>
  <arg name="yolo_config_path"           default="$(find darknet_ros)/yolo_network_config/cfg"/>

  <!-- ROS and network parameter files -->
  <arg name="ros_param_file"             default="$(find darknet_ros)/config/ros.yaml"/>
  <arg name="network_param_file"         default="$(find darknet_ros)/config/yolov2-tiny.yaml"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="robot1/camera/rgb/image_raw" file="$(arg ros_param_file)"/>
  <rosparam command="load" ns="robot1/camera/rgb/image_raw" file="$(arg network_param_file)"/>

  <rosparam command="load" ns="robot2/camera/rgb/image_raw" file="$(arg ros_param_file)"/>
  <rosparam command="load" ns="robot2/camera/rgb/image_raw" file="$(arg network_param_file)"/>

  <!-- Start darknet and ros wrapper robot1 -->
  <node ns="robot1/camera/rgb/image_raw" pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />
    <remap from="camera/rgb/image_raw"  to="$(arg image1)" />
  </node>
  
  <!-- Start darknet and ros wrapper robot2 -->
  <node ns="robot2/camera/rgb/image_raw" pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />
    <remap from="camera/rgb/image_raw"  to="$(arg image2)" />
  </node>

 <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="compressed in:=/front_camera/image_raw raw out:=/camera/image_raw" /> -->
</launch>
